{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.1",
    "title": "Pet-support API",
    "description": "Pet-support project"    
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "http://localhost:3000" }],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "Users",
      "description": "Users endpoints"
    },
    {
      "name": "Notice",
      "description": "Notice endpoints"
    },
    {
      "name": "Services",
      "description": "Services endpoints"
    },
    {
      "name": "News",
      "description": "News endpoints"
    }
  ],

  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],
        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthSignup"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Missing field (invalid request body)"    
          },
          "409": {
            "description": "Provided email already exists"  
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "AuthSignup": {
        "type": "object",
        "required": ["email", "password","name", "city", "phone"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "user@mail.com"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "password123"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "Taras Shevchenko"
          },
          "city": {
            "type": "string",
            "description": "User's city",
            "example": "Bucha, Kyiv"
          },
          "phone": {
            "type": "string",
            "description": "User's phone number",
            "example": "+380671234567"
          }
        }
      }  
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }


}